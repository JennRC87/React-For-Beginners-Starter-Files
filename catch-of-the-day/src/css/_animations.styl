/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

// these two are the animations for adding seafood to your order
.order-enter
  transition all 0.5s
  // start at this point
  transform translateX(-120%) rotate(1000deg)
  max-height 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    padding 2rem 0 !important
    // end at this point
    transform translateX(0) rotate(0);

.order-leave
  // should line up with the transition in the Order.js CSSTransitionGroup
  transition all 0.5s
  transform translateX(0)
  &.order-leave-active
    transform translateX(120%)
    max-height 0
    padding 0

.count-enter
  transition all .25s
  transform translateY(100%) // start off screen
  &.count-enter-active
    transform translateY(0) // put it in it's normal resting spot

.count-leave
  transition all .25s
  position absolute
  left 0
  bottom 0
  transform translateY(0) //start it where it is
  &.count-leave-active
  transform translateY(-100%) //end off screen

